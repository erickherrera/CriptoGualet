{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "vcpkg-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "win-ninja-x64-debug",
      "displayName": "Windows Ninja x64 Debug (Advanced - Requires Developer Command Prompt)",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "description": "Advanced: Ninja generator. Requires VCPKG_ROOT environment variable and ninja in PATH. Use win-vs2022-x64-debug preset instead for easier setup."
    },
    {
      "name": "win-ninja-x64-release",
      "displayName": "Windows Ninja x64 Release (Advanced)",
      "inherits": "win-ninja-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "description": "Advanced: Release build with Ninja. Use win-vs2022-x64-release instead for easier setup."
    },
    {
      "name": "linux-clang-debug",
      "displayName": "Linux Clang Debug",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "linux-clang-release",
      "displayName": "Linux Clang Release",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "win-vs2022-x64-debug",
      "displayName": "MSVC Debug (Faster Builds)",
      "inherits": "vcpkg-base",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "CMAKE_GENERATOR_PLATFORM": "x64",
        "ENABLE_UNITY_BUILD": "ON",
        "ENABLE_MSVC_MP": "ON"
      },
      "description": "MSVC Debug builds - fastest compile times for daily development."
    },
    {
      "name": "win-vs2022-x64-release",
      "displayName": "MSVC Release",
      "inherits": "win-vs2022-x64-debug",
      "cacheVariables": {},
      "description": "MSVC Release builds - standard release configuration."
    },
    {
      "name": "win-vs2022-clangcl-debug",
      "displayName": "ClangCL Debug (Qt)",
      "inherits": "vcpkg-base",
      "generator": "Visual Studio 17 2022",
      "toolset": "ClangCL",
      "architecture": "x64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "CMAKE_GENERATOR_PLATFORM": "x64",
        "QT_DIR": {
          "type": "PATH",
          "value": "C:/Qt/6.9.1/msvc2022_64"
        }
      },
      "description": "ClangCL Debug builds with improved Qt integration. Uses Qt 6.9.1 MSVC build with ABI compatibility flags."
    },
    {
      "name": "win-vs2022-clangcl-release",
      "displayName": "ClangCL Release",
      "inherits": "win-vs2022-clangcl-debug",
      "cacheVariables": {},
      "description": "ClangCL Release builds - optimized for better runtime performance."
    },
    {
      "name": "win-vs2022-clangcl-debug-asan",
      "displayName": "ClangCL Debug + AddressSanitizer",
      "inherits": "vcpkg-base",
      "generator": "Visual Studio 17 2022",
      "toolset": "ClangCL",
      "architecture": "x64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "CMAKE_GENERATOR_PLATFORM": "x64",
        "ENABLE_ASAN": "OFF",
        "ENABLE_LTO": "OFF",
        "QT_DIR": {
          "type": "PATH",
          "value": "C:/Qt/6.9.1/msvc2022_64"
        }
      },
      "description": "ClangCL Debug with AddressSanitizer - detects memory errors for security testing."
    },
    {
      "name": "win-vs2022-clangcl-release-lto",
      "displayName": "ClangCL Release + LTO (Maximum Performance)",
      "inherits": "win-vs2022-clangcl-debug",
      "generator": "Visual Studio 17 2022",
      "toolset": "ClangCL",
      "architecture": "x64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "CMAKE_GENERATOR_PLATFORM": "x64",
        "ENABLE_ASAN": "OFF",
        "ENABLE_LTO": "ON",
        "QT_DIR": {
          "type": "PATH",
          "value": "C:/Qt/6.9.1/msvc2022_64"
        }
      },
      "description": "ClangCL Release with Link-Time Optimization - maximum runtime performance."
    }
  ],
  "buildPresets": [
    {
      "name": "win-ninja-build",
      "displayName": "Windows Ninja Debug",
      "configurePreset": "win-ninja-x64-debug"
    },
    {
      "name": "win-ninja-build-release",
      "displayName": "Windows Ninja Release",
      "configurePreset": "win-ninja-x64-release"
    },
    {
      "name": "win-vs2022-build",
      "displayName": "Windows VS2022 Debug",
      "configurePreset": "win-vs2022-x64-debug"
    },
    {
      "name": "win-vs2022-build-release",
      "displayName": "Windows VS2022 Release",
      "configurePreset": "win-vs2022-x64-release"
    },
    {
      "name": "win-vs2022-clangcl-build",
      "displayName": "Windows VS2022 ClangCL Debug",
      "configurePreset": "win-vs2022-clangcl-debug",
      "configuration": "Debug"
    },
    {
      "name": "win-vs2022-clangcl-build-release",
      "displayName": "Windows VS2022 ClangCL Release",
      "configurePreset": "win-vs2022-clangcl-release",
      "configuration": "Release"
    },
    {
      "name": "win-vs2022-clangcl-build-asan",
      "displayName": "Build ClangCL with ASan",
      "configurePreset": "win-vs2022-clangcl-debug-asan",
      "configuration": "Debug"
    },
    {
      "name": "win-vs2022-clangcl-build-lto",
      "displayName": "Build ClangCL with LTO",
      "configurePreset": "win-vs2022-clangcl-release-lto",
      "configuration": "Release"
    },
    {
      "name": "linux-clang-build",
      "displayName": "Linux Clang Debug",
      "configurePreset": "linux-clang-debug"
    },
    {
      "name": "linux-clang-build-release",
      "displayName": "Linux Clang Release",
      "configurePreset": "linux-clang-release"
    }
  ],
  "testPresets": [
    {
      "name": "win-vs2022-clangcl-test",
      "displayName": "Windows ClangCL Tests",
      "configurePreset": "win-vs2022-clangcl-debug-asan",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "win-vs2022-test",
      "displayName": "Windows MSVC Tests",
      "configurePreset": "win-vs2022-x64-debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}