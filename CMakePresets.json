{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "vcpkg-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "win-base",
      "hidden": true,
      "inherits": "vcpkg-base",
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_PREFIX_PATH": "C:/Qt/6.9.1/msvc2022_64"
      }
    },
    {
      "name": "win-vs2022-msvc-debug",
      "displayName": "Windows x64 MSVC Debug",
      "inherits": "win-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-vs2022-msvc-release",
      "displayName": "Windows x64 MSVC Release",
      "inherits": "win-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "win-vs2022-clangcl-debug",
      "displayName": "Windows x64 Clang-CL Debug",
      "inherits": "win-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      }
    },
    {
      "name": "win-vs2022-clangcl-release",
      "displayName": "Windows x64 Clang-CL Release",
      "inherits": "win-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      }
    },
    {
      "name": "vcpkg-linux-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "/home/magnanimous23/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "linux-dbg",
      "displayName": "WSL Linux Debug",
      "inherits": "vcpkg-linux-base",
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++",
        "CMAKE_MAKE_PROGRAM": "/usr/bin/ninja",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_PREFIX_PATH": "/usr/lib/x86_64-linux-gnu/cmake/Qt6"
      }
    },
    {
      "name": "linux-rel",
      "displayName": "WSL Linux Release",
      "inherits": "linux-dbg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "win-vs2022-msvc-debug",
      "configurePreset": "win-vs2022-msvc-debug"
    },
    {
      "name": "win-vs2022-msvc-release",
      "configurePreset": "win-vs2022-msvc-release"
    },
    {
      "name": "win-vs2022-clangcl-debug",
      "configurePreset": "win-vs2022-clangcl-debug"
    },
    {
      "name": "win-vs2022-clangcl-release",
      "configurePreset": "win-vs2022-clangcl-release"
    },
    {
      "name": "linux-dbg",
      "configurePreset": "linux-dbg"
    },
    {
      "name": "linux-rel",
      "configurePreset": "linux-rel"
    }
  ],
  "testPresets": [
    {
      "name": "win-vs2022-msvc-debug",
      "configurePreset": "win-vs2022-msvc-debug"
    },
    {
      "name": "win-vs2022-msvc-release",
      "configurePreset": "win-vs2022-msvc-release"
    },
    {
      "name": "win-vs2022-clangcl-debug",
      "configurePreset": "win-vs2022-clangcl-debug"
    },
    {
      "name": "win-vs2022-clangcl-release",
      "configurePreset": "win-vs2022-clangcl-release"
    },
    {
      "name": "linux-dbg",
      "configurePreset": "linux-dbg"
    },
    {
      "name": "linux-rel",
      "configurePreset": "linux-rel"
    }
  ]
}
