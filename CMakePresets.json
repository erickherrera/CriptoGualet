{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "win-clang-x64-debug",
      "displayName": "Windows Clang x64 Debug",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": { "value": "ClangCL" },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "BUILD_GUI_WIN32": "OFF",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-clang-x64-release",
      "displayName": "Windows Clang x64 Release",
      "inherits": "win-clang-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-clang-debug",
      "displayName": "Linux Clang Debug",
      "inherits": "base",
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_GUI_WIN32": "OFF",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "linux-clang-release",
      "displayName": "Linux Clang Release",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build",
      "displayName": "Default Build (Clang Debug)",
      "configurePreset": "win-clang-x64-debug"
    },
    {
      "name": "build-release",
      "displayName": "Default Release (Clang Release)",
      "configurePreset": "win-clang-x64-release"
    },
    {
      "name": "win-clang-build",
      "displayName": "Windows Clang Debug",
      "configurePreset": "win-clang-x64-debug"
    },
    {
      "name": "win-clang-build-release",
      "displayName": "Windows Clang Release",
      "configurePreset": "win-clang-x64-release"
    },
    {
      "name": "linux-clang-build",
      "displayName": "Linux Clang Debug",
      "configurePreset": "linux-clang-debug"
    },
    {
      "name": "linux-clang-build-release",
      "displayName": "Linux Clang Release",
      "configurePreset": "linux-clang-release"
    }
  ],
  "testPresets": []
}
