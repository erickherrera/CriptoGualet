{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "win-msvc-x64-debug",
      "displayName": "Windows MSVC x64 Debug",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "BUILD_GUI_WIN32": "OFF"
      }
    },
    {
      "name": "win-msvc-x64-release",
      "displayName": "Windows MSVC x64 Release",
      "inherits": "win-msvc-x64-debug",
      "cacheVariables": {}
    },
    {
      "name": "linux-gcc-debug",
      "displayName": "Linux GCC Debug",
      "inherits": "base",
      "generator": "Ninja",
      "toolchainFile": "",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "BUILD_GUI_WIN32": "OFF"
      }
    },
    {
      "name": "linux-gcc-release",
      "displayName": "Linux GCC Release",
      "inherits": "linux-gcc-debug",
      "cacheVariables": {}
    },
    {
      "name": "linux-clang-debug",
      "displayName": "Linux Clang Debug",
      "inherits": "base",
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "BUILD_GUI_WIN32": "OFF"
      }
    },
    {
      "name": "linux-clang-release",
      "displayName": "Linux Clang Release",
      "inherits": "linux-clang-debug",
      "cacheVariables": {}
    }
  ],
  "buildPresets": [
    {
      "name": "build",
      "configurePreset": "win-msvc-x64-debug"
    },
    {
      "name": "build-release",
      "configurePreset": "win-msvc-x64-release"
    },
    {
      "name": "linux-gcc-build",
      "configurePreset": "linux-gcc-debug"
    },
    {
      "name": "linux-gcc-build-release",
      "configurePreset": "linux-gcc-release"
    },
    {
      "name": "linux-clang-build",
      "configurePreset": "linux-clang-debug"
    },
    {
      "name": "linux-clang-build-release",
      "configurePreset": "linux-clang-release"
    }
  ],
  "testPresets": []
}
