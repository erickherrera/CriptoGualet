{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      },
      "environment": {
        "VCPKG_ROOT": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/vcpkg"
      }
    },
    {
      "name": "win-ninja-x64-debug",
      "displayName": "Windows Ninja x64 Debug (Best for IntelliSense)",
      "inherits": "base",
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_GUI_WIN32": "OFF",
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "win-ninja-x64-release",
      "displayName": "Windows Ninja x64 Release",
      "inherits": "win-ninja-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-clang-debug",
      "displayName": "Linux Clang Debug",
      "inherits": "base",
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_GUI_WIN32": "OFF",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "linux-clang-release",
      "displayName": "Linux Clang Release",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "win-vs2022-x64-debug",
      "displayName": "Windows VS2022 x64 Debug (IDE)",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "toolset": {
        "value": "ClangCL",
        "strategy": "set"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "BUILD_GUI_WIN32": "OFF",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "win-vs2022-x64-release",
      "displayName": "Windows VS2022 x64 Release (IDE)",
      "inherits": "win-vs2022-x64-debug",
      "cacheVariables": {}
    }
  ],
  "buildPresets": [
    {
      "name": "win-ninja-build",
      "displayName": "Windows Ninja Debug (Best for IntelliSense)",
      "configurePreset": "win-ninja-x64-debug"
    },
    {
      "name": "win-ninja-build-release",
      "displayName": "Windows Ninja Release",
      "configurePreset": "win-ninja-x64-release"
    },
    {
      "name": "win-vs2022-build",
      "displayName": "Windows VS2022 Debug (IDE)",
      "configurePreset": "win-vs2022-x64-debug",
      "configuration": "Debug"
    },
    {
      "name": "win-vs2022-build-release",
      "displayName": "Windows VS2022 Release (IDE)",
      "configurePreset": "win-vs2022-x64-release",
      "configuration": "Release"
    },
    {
      "name": "linux-clang-build",
      "displayName": "Linux Clang Debug",
      "configurePreset": "linux-clang-debug"
    },
    {
      "name": "linux-clang-build-release",
      "displayName": "Linux Clang Release",
      "configurePreset": "linux-clang-release"
    }
  ],
  "testPresets": []
}
