{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "vcpkg-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_INSTALLED_DIR": "${sourceDir}/out/v"
      }
    },
    {
      "name": "win-base",
      "hidden": true,
      "inherits": "vcpkg-base",
      "generator": "Visual Studio 18 2026",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_PREFIX_PATH": "$env{QT_ROOT_DIR}"
      }
    },
    {
      "name": "win-ninja-base",
      "hidden": true,
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_PREFIX_PATH": "$env{QT_ROOT_DIR}"
      }
    },
    {
      "name": "win-vs2022-msvc-debug",
      "displayName": "Windows x64 MSVC Debug",
      "inherits": "win-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-ninja-msvc-debug",
      "displayName": "Windows x64 Ninja MSVC Debug",
      "inherits": "win-ninja-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-vs2022-msvc-release",
      "displayName": "Windows x64 MSVC Release",
      "inherits": "win-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "win-vs2022-clangcl-debug",
      "displayName": "Windows x64 Clang-CL Debug",
      "inherits": "win-base",
      "architecture": "x64",
      "toolset": "ClangCL",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-ninja-clangcl-debug",
      "displayName": "Windows x64 Ninja Clang-CL Debug",
      "inherits": "win-ninja-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      }
    },
    {
      "name": "win-vs2022-clangcl-release",
      "displayName": "Windows x64 Clang-CL Release",
      "inherits": "win-base",
      "architecture": "x64",
      "toolset": "ClangCL",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "vcpkg-linux-base",
      "hidden": true,
      "inherits": "base",
      "environment": {
        "VCPKG_ROOT": "$env{HOME}/vcpkg"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "linux-dbg",
      "displayName": "WSL Linux Debug",
      "inherits": "vcpkg-linux-base",
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_MAKE_PROGRAM": "ninja",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_PREFIX_PATH": "$env{QT_ROOT_DIR}"
      }
    },
    {
      "name": "linux-rel",
      "displayName": "WSL Linux Release",
      "inherits": "linux-dbg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "win-vs2022-msvc-debug",
      "configurePreset": "win-vs2022-msvc-debug"
    },
    {
      "name": "win-vs2022-msvc-release",
      "configurePreset": "win-vs2022-msvc-release"
    },
    {
      "name": "win-vs2022-clangcl-debug",
      "configurePreset": "win-vs2022-clangcl-debug"
    },
    {
      "name": "win-vs2022-clangcl-release",
      "configurePreset": "win-vs2022-clangcl-release"
    },
    {
      "name": "linux-dbg",
      "configurePreset": "linux-dbg"
    },
    {
      "name": "linux-rel",
      "configurePreset": "linux-rel"
    }
  ],
  "testPresets": [
    {
      "name": "win-vs2022-msvc-debug",
      "configurePreset": "win-vs2022-msvc-debug",
      "filter": {
        "include": {
          "name": "test_session_consolidated|test_repository_consolidated|test_signing_robustness|test_blockcypher_api"
        }
      }
    },
    {
      "name": "win-vs2022-msvc-release",
      "configurePreset": "win-vs2022-msvc-release",
      "filter": {
        "include": {
          "name": "test_session_consolidated|test_repository_consolidated|test_signing_robustness|test_blockcypher_api"
        }
      }
    },
    {
      "name": "win-vs2022-clangcl-debug",
      "configurePreset": "win-vs2022-clangcl-debug",
      "filter": {
        "include": {
          "name": "test_session_consolidated|test_repository_consolidated|test_signing_robustness|test_blockcypher_api"
        }
      }
    },
    {
      "name": "win-vs2022-clangcl-release",
      "configurePreset": "win-vs2022-clangcl-release",
      "filter": {
        "include": {
          "name": "test_session_consolidated|test_repository_consolidated|test_signing_robustness|test_blockcypher_api"
        }
      }
    },
    {
      "name": "linux-dbg",
      "configurePreset": "linux-dbg",
      "filter": {
        "include": {
          "name": "test_session_consolidated|test_repository_consolidated|test_signing_robustness|test_blockcypher_api"
        }
      }
    },
    {
      "name": "linux-rel",
      "configurePreset": "linux-rel",
      "filter": {
        "include": {
          "name": "test_session_consolidated|test_repository_consolidated|test_signing_robustness|test_blockcypher_api"
        }
      }
    }
  ]
}
