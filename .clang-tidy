Checks: >
  bugprone-*,
  clang-analyzer-*,
  cert-*,
  cppcoreguidelines-*,
  hicpp-*,
  misc-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,
  security-*

WarningsAsErrors: 'bugprone-*,clang-analyzer-*,cert-*,security-*'
HeaderFilterRegex: '.*/(backend|frontend|src)/.*'

# Exclude problematic warnings that don't represent actual bugs
CheckOptions:
  - key:             bugprone-easily-swappable-parameters.AllMatches
    value:           '1'
  - key:             bugprone-easily-swappable-parameters.MinLength
    value:           '4'
  - key:             bugprone-narrowing-conversions.AllowIntegers
    value:           '1'
  - key:             cert-err58-cpp.AllowDynamicExceptionCreation
    value:           '1'
  - key:             modernize-use-nullptr.NullMacros
    value:           'NULL'
  - key:             readability-identifier-naming.VariableCase
    value:           camelBack
  - key:             readability-identifier-naming.FunctionCase
    value:           CamelCase
  - key:             readability-identifier-naming.ClassCase
    value:           CamelCase
  - key:             readability-identifier-naming.NamespaceCase
    value:           lower_case
