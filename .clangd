CompileFlags:
  # Use compile_commands.json as primary source (already in root)
  CompilationDatabase: .

  Add:
    # Enhanced C++ standard
    - -std=c++20

    # Enhanced security warnings
    - -Wall
    - -Wextra
    - -Werror=return-type
    - -Werror=uninitialized
    - -Werror=delete-non-virtual-dtor
    - -Wformat-security
    - -Wshadow
    - -Wold-style-cast
    - -Wcast-align
    - -Woverloaded-virtual
    - -Wpedantic
    - -Wconversion
    - -Wsign-conversion
    - -Wnull-dereference
    - -Wformat=2
    - -Wimplicit-fallthrough
    - -Wextra-semi
    - -Wcast-qual
    - -Wdouble-promotion

    # Compiler hardening flags (analysis-time)
    - -fstack-protector-strong
    - -ftrivial-auto-var-init=pattern
    - -fno-omit-frame-pointer

    # ClangCL-specific paths and compatibility
    - -IC:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/Llvm/x64/include
    - -fms-compatibility-version=19

    # Windows-specific
    - -DWIN32
    - -D_WINDOWS
    - -DWIN64
    - -D_WIN64

    # Qt paths (MSVC builds for ClangCL compatibility)
    - -IC:/Program Files/Qt/6.9.1/msvc2022_64/include
    - -IC:/Program Files/Qt/6.9.1/msvc2022_64/include/QtCore
    - -IC:/Program Files/Qt/6.9.1/msvc2022_64/include/QtWidgets
    - -IC:/Program Files/Qt/6.9.1/msvc2022_64/include/QtGui
    - -IC:/Program Files/Qt/6.9.1/msvc2022_64/include/QtSvg
    - -IC:/Program Files/Qt/6.9.1/msvc2022_64/include/QtNetwork

    # vcpkg include path
    - -Ivcpkg_installed/x64-windows/include

Diagnostics:
  # Enable comprehensive diagnostics for security analysis
  Suppress:
    - unused-includes
  UnusedIncludes: None
  MissingIncludes: Strict
  ClangTidy:
    Add:
      - bugprone-*
      - cert-*
      - clang-analyzer-*
      - cppcoreguidelines-*
      - hicpp-*
      - misc-*
      - modernize-*
      - performance-*
      - portability-*
      - readability-*
      - security-*
    CheckOptions:
      readability-identifier-naming.ClassCase: CamelCase
      performance-move-const-arg.CheckTriviallyCopyableMove: false

Index:
  # Background indexing for better performance
  Background: Build

  # Index standard library
  StandardLibrary: Yes

InlayHints:
  # Show parameter names in function calls
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

Completion:
  # All scopes completion
  AllScopes: Yes
